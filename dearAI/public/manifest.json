{
    "manifest_version": 3,
    "name": "DearAI",
    "version": "1.0.0",
    "description": "AI 기반 메일 어시스턴트",
    "action": {
        "default_popup": "index.html",
        "default_icon": "logo.png",
        "default_title": "DearAI"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["identity", "storage", "tabs", "scripting", "alarms"],
    "host_permissions": [
        "https://mail.google.com/*",
        "https://mail.naver.com/*",
        "https://dearai.cspark.my/*"
    ],
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["contentScript.js"],
            "matches": ["https://mail.google.com/*", "https://mail.naver.com/*"]
        }
    ]
}
